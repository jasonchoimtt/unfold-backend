{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "expect": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "comma-dangle": [1, "always-multiline"],
        "no-unused-vars": [2, {"args": "none"}],
        "no-console": 0,

        "block-scoped-var": 1,
        "consistent-return": 1,
        "dot-notation": 1,
        "eqeqeq": 1,
        "guard-for-in": 1,
        "no-caller": 1,
        "no-eq-null": 1,
        "no-eval": 1,
        "no-extend-native": 1,
        "no-extra-bind": 1,
        "no-floating-decimal": 1,
        "no-implied-eval": 1,
        "no-invalid-this": 1,
        "no-iterator": 1,
        "no-lone-blocks": 1,
        "no-native-reassign": 1,
        "no-new-func": 1,
        "no-new-wrappers": 1,
        "no-proto": 1,
        "no-return-assign": 1,
        "no-script-url": 1,
        "no-self-compare": 1,
        "no-sequences": 1,
        "no-throw-literal": 1,
        "no-unused-expressions": 1,
        "no-useless-call": 1,
        "no-void": 1,
        "no-with": 1,
        "radix": 1,
        "wrap-iife": 1,
        "semi": 1,

        "indent": 1,
        "no-label-var": 1,
        "no-use-before-define": [1, "nofunc"],
        "max-len": [1, 99],
        "no-trailing-spaces": 1,
        "no-mixed-spaces-and-tabs": 1
    }
}
